#close
	font-cta()
	position fixed
	top $headerHeight
	right 0
	z-index 4
	a
		background $accent
		color $secondary
		// font-size 2.3rem
		width $headerHeight
		height $headerHeight
		border-radius 100%
		display inline-flex
		justify-content center
		align-items center
		&:hover
			color $accent
			background $secondary

[page-type=post], [page-type=news]
	position relative
	background $primary
	#post-cover
		position fixed
		z-index 501
		top $headerHeight
		left 0
		width 100%
		height 100vh
		cursor pointer
		img
			width 100%
			height 100%
			object-fit contain
			object-position top right
			filter: drop-shadow(0 0 0.6rem alpha($secondary, 0.7))
	#post-visuals, #post-content
		min-height 'calc(100vh - %s)' % ($headerHeight)
		span(1/2)
		+below($md)
			stack()
	#post-content
		padding '2rem calc(%s + 2rem)' % $headerHeight
		padding-bottom 100vh
		span(1/2, $offset: 1/2)
		+below($md)
			stack()
			padding 2rem $headerHeight
		// &::before
		// 	content ''
		// 	position fixed
		// 	top 4.5rem
		// 	left 50%
		// 	width 100%
		// 	height 3.4rem
		// 	background $primary
		// 	z-index 3
		img
			width 100%
		.post-tag
			position relative
			z-index 1
			margin-top -0.4rem
			border-radius 20em
			overflow hidden
			text-overflow ellipsis
			& + .post-tag
				margin-top 0
		.section-image
			figure
				margin 0
				img
					display none
			figcaption
				text-align center
		.section-image + .section-image
			.post-tag
				margin-top 0
	#post-header
		text-align center
		.post-tag
			margin-top 0
		h1
			margin-bottom 0
	#post-text
		serif('bold')
		p
			position relative
			z-index 5
			margin-top -.3em
			margin-bottom 0
		p + p
			margin-top 1em
		section:last-child
			p:nth-last-child(2)
				display inline
				margin-top 0
				top -0.4rem
		strong
			box-shadow 0 0.25em 0
	.end
		width 0.8em
		height 0.8em
		position relative
		top -0.22em
		display none
	p + .end
		display inline-block

#post-visuals
	pointer-events none
	position fixed
	top $headerHeight
	left 0
	height 'calc(100vh - %s)' % ($headerHeight)
	overflow hidden
	z-index 99
	.post-visual
		visibility hidden
		position absolute
		width 100%
		height 100%
		img
			width 100%
			height 100%
			object-fit contain
			object-position top left
			filter: drop-shadow(0 0 0.6rem alpha($secondary, 0.7))
		&:nth-child(even)
			img
				object-position top right
				+below($md)
					object-position bottom right
		.credits
			position absolute
			z-index 1
			bottom 1rem
			left 1rem
			width 33%
			color $accent
			visibility hidden
			+below($md)
				width 100%
	+above($md + 1)
		for i in (0..50)
			&[image-index=\"{i}\"]
				.post-visual:nth-child({i}), .post-visual:nth-child({i}) ~ .post-visual, .post-visual:nth-child({i}) .credits
					visibility visible
	+below($md)
		for i in (0..50)
			&[image-index=\"{i}\"].current-tag.is-scrolling
				.post-visual:nth-child({i}), .post-visual:nth-child({i}) .credits
					visibility visible