.loader
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background $accent
	z-index 10000
	.button
		align()
		font-size 11vw

.loader.animate
	transition transform 800ms 200ms $kinetic
	transform translateY(-100vh) translateZ(0)
	.button
		transition transform 600ms $kinetic
		transform translate(-50%,-110vh) translateZ(0)