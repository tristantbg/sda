#menu
	display none
	height 'calc(100% - %s)' % ($headerHeight)
	width 100%
	position fixed
	top $headerHeight
	left 0
	z-index 600
	grid-template-columns 50% auto $headerHeight
	grid-template-rows '%s calc(100% - %s)' % ($headerHeight $headerHeight)
	grid-template-areas 'categories search close' 'categories tags tags'

#close-additional-menu
	display none
	grid-area close
	a
		background $accent
		color $secondary
		// font-size 2.3rem
		width $headerHeight
		height $headerHeight
		border-radius 100%
		display inline-flex
		justify-content center
		align-items center
		&:hover
			color $accent
			background $secondary

nav#main-categories
	grid-area categories
	ul
		width 100%
		height 100%
		display flex
		flex-direction column
		justify-content center
		align-items center
	li
		position relative
		flex-grow 1
		width 100%
		text-transform uppercase
		text-align center
		display flex
		justify-content center
		align-items center
		a
			align()
			width 100%
		&.rounded
			border-radius 20em
	li:not(#more-button)
		font-menu()
		padding 1em 3em
	li#more-button
		flex-grow 0
		min-width initial
		width auto
	[event-target="additional-menu"]
		span::after
			content 'More'

#searchbar
	display none
	grid-area search
	width 100%
	border 0.2em solid
	z-index 10
	background $primary
	input
		font-text()
		sans-serif()
		text-transform uppercase
		text-align center
		width 100%
		height 100%
		background none
		border none
		+below($sm)
			width 100%
			margin-left 0
		&:focus
			outline none
		&::placeholder
			color transparentize($secondary, 0.5)

#tags-index
	width 100%
	grid-area tags
	display none
	grid-template-columns 20% 20% 20% 20% 20%
	.scroller
		& > div
			height 'calc(100vh - %s)' % ($headerHeight*2)
			overflow-y scroll
			&::-webkit-scrollbar
				display none
	.search-elem
		display flex
		flex-direction column
		.button
			width 100%
			float left
			display block
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
		a.color
			width 100%
			float left
			display block
			border-radius 50%
			&::before
				content ""
				display block
				padding-top 100%
					
body.menu-on
	overflow hidden
	#menu-burger
		background $secondary
		color $accent	
	#menu
		display grid
	&.more-on
		#menu
			grid-template-columns 37.5% auto $headerHeight
		nav#main-categories
			li#more-button
				font-menu()
			[event-target="additional-menu"]
				span::after
					content 'Less'
		#searchbar, #close-additional-menu
			display block
		#tags-index
			display grid