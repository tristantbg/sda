header
	position fixed
	top 0
	left 0
	display inline-flex
	width 100%
	justify-content space-between
	align-items center
	background $accent
	z-index 100

#menu-burger
	width 3em
	height 3em
	background $secondary
	padding 0.8rem
	cursor pointer
	svg
		fill $accent
	&.open
		background $accent
		svg
			fill $secondary

#site-title
	flex-grow 1
	text-align center
	h1
		margin-top 0.1em

#nav-language-placeholder
	width 3em
	height 3em
	background $secondary

nav.languages
	position fixed
	top 0
	right 0
	width 3em
	height 3em
	z-index 10000000
	ul
		display inline-flex
		flex-direction column
	li
		display none
		order 2
		width 3em
		height 3em
		background $secondary
		color $accent
		text-transform uppercase
		text-align center
		&.active
			order 1
			display block
	a
		display block
		width 100%
		height 100%
		display flex
		align-items center
		justify-content center
	&:hover
		li
			display block
			&:hover
				background $accent
				color $secondary

nav.categories
	position fixed
	top 4.5rem
	// top calc(4.5rem + 1px)
	left 0
	min-width 50%
	height calc(100% - 4.5rem)
	z-index 10000000
	&:not(.open)
		display none
	ul
		width 100%
		height 100%
		display inline-flex
		flex-direction column
		justify-content center
		align-items center
	li
		flex-grow 1
		width 100%
		text-transform uppercase
		text-align center
		display flex
		justify-content center
		align-items center
		// margin-bottom 1px
		&.rounded
			border-radius 20em
	li.more
		flex-grow 0
		width 3rem
	a
		height 100%
	[event-target="additional-menu"]
		span::after
			content 'More'
	&.more
		min-width 33.33333%
		li:not(.more)
			font-size 3rem
			background $secondary
			color $accent
		li.more
			height 20%
			font-size 8vh
			min-width 0
			width 32vh
			background $accent
			color $secondary
		[event-target="additional-menu"]
			span::after
				content 'Less'

#additional-menu
	position fixed
	z-index 100000000
	width 66.666666%
	top 4.5rem
	left 33.333333%
	display none
	.scroller
			& > div
				height calc(100vh - 11.8rem)
				overflow-y scroll
				&::-webkit-scrollbar
					display none
	&.more
		display block