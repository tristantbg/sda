header
	position fixed
	top 0
	left 0
	display inline-flex
	width 100%
	justify-content space-between
	align-items center
	background $accent
	z-index 550

#menu-burger
	transition opacity 200ms ease
	width $headerHeight
	height $headerHeight
	padding 0.8rem
	cursor pointer
	svg
		fill currentColor

#site-title
	transition opacity 200ms ease
	flex-grow 1
	text-align center
	a
		display block
		margin-bottom 0.1em

#nav-language-placeholder, #info-toggle
	width $headerHeight
	height $headerHeight
	background $secondary

#info-toggle
	font-cta()
	color $accent
	display flex
	align-items center
	justify-content center
	&::before
		content 'i'
	&.active
		color $secondary
		background $accent

nav.languages
	display none
	font-cta()
	position fixed
	top 0
	right $headerHeight
	width $headerHeight
	height $headerHeight
	z-index 550
	ul
		display flex
		flex-direction column
	li
		display none
		order 2
		width $headerHeight
		height $headerHeight
		background $secondary
		color $accent
		text-transform uppercase
		text-align center
		&.active
			order 1
			display block
	a
		display block
		width 100%
		height 100%
		display flex
		align-items center
		justify-content center
	&:hover
		li
			display block
			&:hover
				background $accent
				color $secondary

[page-type=info]
	nav.languages
		display block