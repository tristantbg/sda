header
	position fixed
	top 0
	left 0
	display inline-flex
	width 100%
	justify-content space-between
	align-items center
	background $accent
	z-index 550

#menu-burger
	width 3em
	height 3em
	padding 0.8rem
	cursor pointer
	svg
		fill currentColor

#site-title
	flex-grow 1
	text-align center
	a
		display block
		margin-bottom 0.1em

#nav-language-placeholder
	width 3em
	height 3em
	background $secondary

nav.languages
	position fixed
	top 0
	right 0
	width 3em
	height 3em
	z-index 10000000
	ul
		display inline-flex
		flex-direction column
	li
		display none
		order 2
		width 3em
		height 3em
		background $secondary
		color $accent
		text-transform uppercase
		text-align center
		&.active
			order 1
			display block
	a
		display block
		width 100%
		height 100%
		display flex
		align-items center
		justify-content center
	&:hover
		li
			display block
			&:hover
				background $accent
				color $secondary