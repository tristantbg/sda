#page-content.blog
	.post-item
		position relative
		span(1)
		height 50vw
		.item-visual, .item-text
			span(1/2)
			height 100%
		.item-visual
			img
				object-fit cover
		.item-text
			font-size 8.5vw
			display flex
			justify-content center
			align-items center
			text-align center
			padding 3rem
			background $primary
			&.serif
				font-size 9.5vw
				line-height 0.8
		.link-overlay
			display flex
			justify-content center
			align-items center
			width 100%
			height 100%
			position absolute
			top 0
			left 0
		&.small
			span(1/2)
			height 25vw
			.item-text
				font-size 4.25vw
		&.small:nth-child(4n+2), &.small:nth-child(4n+3), &:not(.small):nth-child(2)
			background $secondary
			.item-text
				background $secondary
				color $primary
			&.news
				.item-text
					color $accent
		&.news
			.item-text
				color $accent

#close
	position fixed
	top 4.5rem
	right 0
	z-index 4
	a
		background $accent
		color $secondary
		// font-size 2.3rem
		width 4.5rem
		height 4.5rem
		border-radius 100%
		display inline-flex
		justify-content center
		align-items center
		&:hover
			color $accent
			background $secondary

#page-content.post
	position relative
	background $primary
	#share-buttons
		position fixed
		top 9rem
		right 0
		height calc(100vh - 9rem)
		display inline-flex
		flex-direction column
		justify-content space-between
		li a
			background $secondary
			color $primary
			font-size 2.3rem
			width 4.5rem
			height 4.5rem
			border-radius 100%
			display inline-flex
			justify-content center
			align-items center
			&:hover
				color $secondary
				background $accent
	.post-cover
		position fixed
		z-index 1000
		top 4.5rem
		left 0
		width 100%
		height 100vh
		cursor pointer
		img
			width 100%
			height 100%
			object-fit contain
			object-position top right
	#post-visuals, #post-content
		min-height calc(100vh - 4.5rem)
		span(1/2)
	#post-visuals
		position fixed
		top 4.5rem
		left 0
		height calc(100% - 4.5rem)
		img
			position absolute
			width 100%
			height 100%
			object-fit contain
			object-position top left
			&:nth-child(even)
				object-position top right
	#post-content
		padding 2rem 5rem
		padding-bottom 100vh
		span(1/2, $offset: 1/2)
		&::before
			content ''
			position fixed
			top 4.5rem
			left 50%
			width 100%
			height 3.4rem
			background $primary
			z-index 3
		img
			width 100%
		.button
			display inline-block
		figure
			margin-bottom 2rem
			img
				display none
			& + figure
				margin-top -2rem
		figcaption
			text-align center
	#post-header
		text-align center
		margin-bottom 2rem
	#post-text
		p:nth-last-child(2)
			display inline
	.end
		width 1em
		height 1em
		display none
	p + .end
		display inline-block