#page-content.medias
	#medias
		span(1)
		min-height calc(100vh - 4.5rem)
		.media
			span(1/4)
			height 25vw
			position relative
			.link-overlay
				display flex
				flex-direction column
				justify-content center
				align-items center
				width 100%
				height 100%
				position absolute
				top 0
				left 0
				z-index 1
				span
					//transition transform 80ms ease
					//transform scale(0)
				&:hover
					span
						transform scale(1)
			&:hover
				.link-overlay
					z-index 3
			img
				position relative
				object-fit cover
				z-index 2

#search
	span(1)
	border .2rem solid
	position: sticky;
	position: -webkit-sticky;
	top: 4.5rem;
	z-index: 10;
	background: $primary;
	width calc(100% - 4.4rem)
	input
		width 50%
		margin-left 25%
		padding 1.45rem
		font-size 0.7em
		text-align center
		background none
		border none
		text-transform uppercase
		+below($sm)
			width 100%
			margin-left 0
		&:focus
			outline none
		&::placeholder
			color transparentize($secondary, 0.5)

#more
	span(1)
	display flex
	font-size 0.7em
	// position fixed
	// z-index 100000000
	// width 66.666666%
	// top 4.5rem
	// left 33.333333%
	.search-elem
		flex 1
		display flex
		flex-direction column
		div .button
			display: block;
			float: left;
			clear: both;
		a.color
			width: 10vw;
			height: 10vw;
			display: block;
			float: left;
			clear: both;
			border-radius: 50%;
	
