#page-content.medias
	#medias
		min-height calc(100vh - 4.5rem)
		.media
			span(1/4)
			height 25vw
			position relative
			.link-overlay
				display flex
				justify-content center
				align-items center
				width 100%
				height 100%
				position absolute
				top 0
				left 0
				span
					transition transform 80ms ease
					transform scale(0)
				&:hover
					span
						transform scale(1)
			img
				object-fit cover