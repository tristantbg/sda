.lazy
	transition opacity 300ms ease
	opacity 0
	&.lazyloaded, &.flickity-lazyloaded
		opacity 1

.desktop
	+below($md)
		display none

.mobile
	+above($md + 1)
		display none

#main
	span(1)

#container
	span(1)
	background $primary
	margin-top $headerHeight

#page-content
	transition opacity 200ms ease
	min-height 'calc(100vh - %s)' % $headerHeight
	span(1)
	background $primary

body
	&::after
		content ''
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		background $primary
		transition opacity 200ms ease, visibility 200ms ease
		z-index 540
		visibility hidden
		opacity 0
	&.is-loading::after
		opacity 1
		visibility visible

body
	+below($sm)
		+landscape()
			overflow hidden
			float left
			height 100vw
			width 100vh
			transform rotate(-90deg) translateX(-100%)
			transform-origin top left